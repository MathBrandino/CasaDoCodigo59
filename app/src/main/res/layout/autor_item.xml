<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/foto_autor_item"
        android:layout_width="120dp"
        android:layout_height="132dp"
        android:contentDescription="foto_autor"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toTopOf="@+id/desc_autor_item"
        android:layout_marginBottom="48dp" />

    <TextView
        android:id="@+id/nome_autor_item"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:gravity="center"
        tools:layout_editor_absoluteY="66dp"
        app:layout_constraintLeft_toRightOf="@+id/foto_autor_item"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.14" />

    <TextView
        android:id="@+id/desc_autor_item"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nome_autor_item"
        android:layout_marginTop="48dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.42" />

</android.support.constraint.ConstraintLayout>